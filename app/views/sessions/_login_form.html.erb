
<div class="login-form">
    <% if session[:current_user_id] %>
     <%#= raise @user.inspect %>
      <h1><%= @user.email%><span style="font-size: 12px; color: darkgrey"> is currently logged in</span></h1>
      <p style="font-size: 18px; font-weight: bold; margin-bottom: 40px; color: re">user_id: <%= session[:current_user_id] %></p>
    <% end %>

    <%= form_for :user, url: login_path do |f| %>

    <% flash.each do |key, value| %>
      <p><%= value %></p>
    <% end %>

    <p>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.submit "Login" %>
    </p>

  <% end %>
  <br>
  <hr>
  <br>
  New users click here!
  <%= link_to new_user_path do %>
    <button class="submit">Create new account</button>
  <% end %>

  <p class="submit"><%= link_to "Logout", logout_path , method: :delete %></p>

</div>
